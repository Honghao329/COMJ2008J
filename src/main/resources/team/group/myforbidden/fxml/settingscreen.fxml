<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team.group.myforbidden.controller.SettingScreenController">

    <ScrollPane fx:id="scrollPane" fitToWidth="true" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <content>
            <VBox fx:id="pdfContainer" spacing="20.0">
                <padding>
                    <Insets bottom="10" left="15" right="15" top="10" />
                </padding>

                <!-- 其他PDF内容会动态添加在此 VBox 中 -->

                <!-- 新增 Back 按钮 -->
                <Button fx:id="back" alignment="CENTER" onMouseClicked="#mouseClickedBack" onMouseEntered="#mouseEnteredBack" onMouseExited="#mouseExitedBack" prefHeight="45.0" prefWidth="1024.0" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8;" text="Back" VBox.vgrow="NEVER" />
            </VBox>

        </content>
    </ScrollPane>

</AnchorPane>
